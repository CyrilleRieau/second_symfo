{% extends 'base.html.twig' %}

{% block body %}
    <h1>Firstentity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ firstEntity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ firstEntity.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ firstEntity.content }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if firstEntity.createdAt %}{{ firstEntity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if firstEntity.updatedAt %}{{ firstEntity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Isenabled</th>
                <td>{% if firstEntity.isEnabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ firstEntity.likes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('firstentity_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('firstentity_edit', { 'id': firstEntity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
